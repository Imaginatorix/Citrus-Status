{
  "manifest_version": 3,
  "name": "Citrus Status",
  "description": "Emoji-based status indicators and activity progress fractions for UPD OJ (oj.dcs.upd.edu.ph).",
  "version": "0.1.0",
  "icons": {
    "16": "icons/icon16-new.png",
    "32": "icons/icon32-new.png",
    "48": "icons/icon48-new.png",
    "128": "icons/icon128-new.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://oj.dcs.upd.edu.ph/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://oj.dcs.upd.edu.ph/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles/content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Citrus Status",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "popup/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "styles/content.css"
      ],
      "matches": [
        "https://oj.dcs.upd.edu.ph/*"
      ]
    }
  ]
}